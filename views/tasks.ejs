<!DOCTYPE html>
<html lang="en">

  <head>
    <%- include('header') %>
  </head>

  <body id="page-top">

    <nav class="navbar navbar-expand navbar-dark bg-dark static-top">

      <a class="navbar-brand mr-1" href="/">Black Board</a>

      <button class="btn btn-link btn-sm text-white order-1 order-sm-0" id="sidebarToggle" href="#">
        <i class="fas fa-bars"></i>
      </button>

      <!-- Navbar -->
      <ul class="navbar-nav ml-auto mr-0 mr-md-3 my-2 my-md-0">
        <li class="nav-item dropdown no-arrow mx-1">
          <a class="nav-link" href="/tasks-page">
            <i class="fas fa-bell fa-fw"></i>
          </a>
        </li>
        <li class="nav-item dropdown no-arrow mx-1">
          <a class="nav-link" href="/messages-page">
            <i class="fas fa-envelope fa-fw"></i>
          </a>
        </li>
        <li class="nav-item dropdown no-arrow">
          <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fas fa-user-circle fa-fw"></i>
          </a>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
            <h6 class="dropdown-header">Hi Mike Doe</h6>
          </div>
        </li>
      </ul>

    </nav>

    <div id="wrapper">

      <%- include('sidebar') %>

      <div id="content-wrapper">

        <div class="container-fluid">

          <div class="list-group">
            <% for(let i=0; i<taskList.tasks.length; i++){ %>
              <% if(taskList.tasks[i].dateCloture == null){ %>
            <a href="#" class="list-group-item list-group-item-action warningColor">
              <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1"><%= taskList.tasks[i].category %></h5>
                <small>Date de la demande: <%= taskList.tasks[i].dateInsert.toLocaleDateString("fr-FR") %></small>
              </div>
              <p class="mb-1"><%= taskList.tasks[i].name %></p>
              <small>Échéance dépassée: <%= taskList.tasks[i].dateDue.toLocaleDateString("fr-FR") %></small>

            <% } else if(taskList.tasks[i].dateCloture != null) { %>
            <a href="#" class="list-group-item list-group-item-action successColor">
              <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1"><%= taskList.tasks[i].category %></h5>
                <small>Date de la demande: <%= taskList.tasks[i].dateInsert.toLocaleDateString("fr-FR") %></small>
              </div>
              <p class="mb-1"><%= taskList.tasks[i].name %></p>
              <small>Cloturé le <%= taskList.tasks[i].dateCloture.toLocaleDateString("fr-FR") %></small>

              <% } else { %>
                <a href="#" class="list-group-item list-group-item-action">
                  <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1"><%= taskList.tasks[i].category %></h5>
                    <small>Date de la demande: <%= taskList.tasks[i].dateInsert.toLocaleDateString("fr-FR") %></small>
                  </div>
                  <p class="mb-1"><%= taskList.tasks[i].name %></p>
                  <small>Échéance : <%= taskList.tasks[i].dateDue.toLocaleDateString("fr-FR") %></small>
                  <% } %>

            </a>
            <% } %>
          </div>


        </div>
        <!-- /.container-fluid -->

        <!-- Sticky Footer -->
        <footer class="sticky-footer">
          <div class="container my-auto">
            <div class="copyright text-center my-auto">
              <span>Copyright © Blackboard</span>
            </div>
          </div>
        </footer>

      </div>
      <!-- /.content-wrapper -->

    </div>
    <!-- /#wrapper -->



    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Page level plugin JavaScript-->
    <script src="vendor/chart.js/Chart.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin.min.js"></script>

  </body>

</html>
